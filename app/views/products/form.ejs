<html>
    <body>

        <div class="errors">

            <% if ( validationErrors ) { %>
                <ul>
                    <% for ( let i = 0; i < validationErrors.length; i++ ) { %>
                        <li>
                            <%= validationErrors[i].param %> - <%= validationErrors[i].msg %>
                        </li>
                    <% } %>
                </ul>
            <% } %>

        </div>

        <div>
            <form action="/products" method="post">

                <div>
                    <label for="title">Title</label>
                    <input type="text" id="titulo" name="titulo" value="<%= product.titulo %>" placeholder="insert title"/>
                </div>
                <div>
                    <label for="price">Price</label>
                    <input type="text" id="preco" name="preco" value="<%= product.preco %>" placeholder="150.25"/>
                </div>
                <div>
                    <label for="description">Description</label>
                    <textarea cols="20" rows="10"  id="descricao" name="descricao" placeholder="fale sobre o livro"><%= product.descricao %></textarea>
                </div>

                <input type="submit" value="save"/>

            </form>
        </div>
    </body>
</html>